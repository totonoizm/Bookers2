    <% end %>
 <h2>User info</h2>
 <% if user_signed_in? %>
    <%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg',fallback: "no_image.jpg" %><!-- !!user.showへリンクしたい！！bookmodelに紐付けたuserのprofile_imageを表示します-->
    <table class="table">
     <tr></tr>
     <tr>
       <th>name</th>
       <th><%= current_user.name %></th>
     </tr>
     <tr>
       <th>introduction</th>
       <th><%= current_user.introduction %></th>
     </tr>
   </table>
   <p><%= link_to " ", edit_user_path(current_user), class: "btn btn-default btn-block glyphicon glyphicon-wrench" %></p>
  <h2 class="jquery">New book</h2>
      <div>
        <%= form_with model:book, local:true do |f| %>
          <div>
            <p><strong>Title</strong></p>
            <%= f.text_field :title, size: "36%" %>
          </div>
          <div>
            <p><strong>Opinion</strong></p>
            <%= f.text_area :body, size: "35%" %>
          </div>
          <div>
            <%= f.submit 'Create Book', class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
 <% end %>
