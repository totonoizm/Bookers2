<body>
  <h1>Books index</h1>
      <div class="col-lg-8">
        <table class="table table-striped">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
          <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, format: 'jpeg' %></td><!--bookmodelに紐付けたuserのprofile_imageを表示します-->
              <td><%= book.title %></td>   <!--テキストのみの表示の仕方を考える--??-->
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </table>
      </div>

